<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DemoDoAn" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle"> true </item>
        <item name="android:windowFullscreen">true</item>
        <!-- MenuTuyChon.-->
        <item name="android:textAppearanceListItem">@font/font_fvf</item>
        <item name="android:itemTextAppearance">@style/MyMenuTuyChon.Text</item>
        <item name="android:itemBackground">#FF9800</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/font_fvf</item>
        <item name="android:background">@color/color_alertdialog</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="MyMenuTuyChon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#FF9800</item>
        <item name="android:fontFamily">@font/font_fvf</item>
    </style>

    <style name="MyMenuTuyChon.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">@font/font_fvf</item>
        <item name="android:background">#FF9800</item>
    </style>

    <style name="MyMenuTuyChon.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/font_fvf</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>