<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nennau_cottruyen"
    tools:context=".BachodayhocActivity">

  <ImageView
      android:id="@+id/ivBacHoDayHoc"
      android:layout_width="500dp"
      android:layout_height="400dp"
      android:layout_marginTop="30dp"
      app:srcCompat="@drawable/bachodayhoc" />

  <ImageView
      android:id="@+id/iv_frame_cottruyen"
      android:layout_width="550dp"
      android:layout_height="300dp"
      android:layout_marginTop="300dp"
      app:srcCompat="@drawable/frame_cottruyen"/>

  <ImageView
      android:id="@+id/ivCloud"
      android:layout_width="-5dp"
      android:layout_height="300dp"
      android:layout_marginTop="-120dp"
      android:layout_marginLeft="-560dp"
      app:srcCompat="@drawable/cloud_nen_fn"/>

  <TextView
      android:id="@+id/txtKhoangThangHai"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="335dp"
      android:layout_marginLeft="23dp"
      android:layout_marginRight="20dp"
      android:textSize="14sp"
      android:alpha="0"
      android:text="@string/txtcanhdayhoc"
      android:fontFamily="@font/font_fvf"
      android:textColor="@color/white"/>

  <TextView
      android:id="@+id/txtDateTime"
      android:layout_width="450dp"
      android:layout_height="100dp"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="10dp"
      android:fontFamily="@font/font_2p"
      android:text="Ngày: Tháng:2   Năm: 1911"
      android:textColor="@color/black"
      android:alpha="0"/>

  <Button
      android:id="@+id/btnBoQua"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="110dp"
      android:layout_marginTop="540dp"
      android:text="Bỏ Qua"
      android:fontFamily="@font/font_fvf"
      app:backgroundTint="#FF5722"
      android:textColor="@color/white"
      android:alpha="0"/>
</RelativeLayout>