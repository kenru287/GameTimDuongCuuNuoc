<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CanhBacDenNewYork">

<!--Ngày tháng-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0b0b0b"
        android:gravity="center_horizontal"
        android:text="Năm 1912"
        android:textColor="@color/white"
        android:fontFamily="@font/font_fvf"
        android:textSize="25dp"
        />

<!--    Nội dung cảnh-->
    <TextView
        android:id="@+id/txtNoidungCanh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Nguyễn Tất Thành vừa đi làm thuê để kiếm sống vừa tìm hiểu đời sống của những người lao động Mỹ."
        android:fontFamily="@font/font_fvf"
        android:textColor="@color/white"
        android:layout_marginTop="250dp"
        android:textSize="22dp"
        android:alpha="0"
        />

<!--    Nút Tiếp Tục-->
    <TextView
        android:id="@+id/txtTiepTuc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="150dp"
        android:text="Tiếp Tục"
        android:fontFamily="@font/font_fvf"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:alpha="0"
        />

<!--    Hoạt cảnh New York-->
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/newyork"

        android:layout_marginTop="-260dp"

        />

<!--    Mở màn cảnh -->
    <TextView
        android:id="@+id/txtMoDau"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0b0b0b"
        android:gravity="center"
        android:text="New York"
        android:textColor="@color/white"
        android:fontFamily="@font/font_fvf"
        android:textSize="40dp"
        android:alpha="1"
        />



</RelativeLayout>