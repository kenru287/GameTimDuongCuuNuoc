<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nhapcang"
    android:id="@+id/layoutBenCang"
    tools:context=".BenCangActivity">

    <ImageView
        android:id="@+id/igvThuyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thuyensong" />

    <Button
        android:id="@+id/btnCuaHang"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="95dp"
        android:text="Cửa Hàng"
        android:fontFamily="@font/font_fvf"
        android:textSize="17sp"
        android:backgroundTint="#FF5722"
        android:textColor="@color/white"
        android:alpha="0"/>

    <Button
        android:id="@+id/btnKhoiHanh"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="95dp"
        android:text="Khởi Hành"
        android:fontFamily="@font/font_fvf"
        android:textSize="17sp"
        android:backgroundTint="#FF5722"
        android:textColor="@color/white"
        android:alpha="0"/>

</RelativeLayout>